<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Data</title>
    <style>
      table {
        border-collapse: collapse;
        width: 100%;
      }
      th,
      td {
        border: 1px solid black;
        padding: 8px;
        text-align: left;
      }
      th {
        background-color: #f2f2f2;
      }
      a{
        display: inline-block;
        padding: 8px 16px;
        text-decoration: none;
        color: white;
        background-color: #4caf50;
        margin-top: 16px;
        margin-bottom: 16px;
      }

      button {
        padding: 8px 16px;
        color: white;
        background-color: #4caf50;
        margin-top: 16px;
        margin-bottom: 16px;
        cursor: pointer;
        border: none;
        outline: none;
      }

</style>
  </head>
  <body>
    <h1>VIEW ALL RECORDS</h1>
    <table border="1">
      <thead>
        <tr>
          <th>ID</th>
          <th>NAME</th>
          <th>MESSAGE</th>
          <th>PHONE</th>
          <th>EMAIL</th>
          <th>UPDATE USER RECORDS</th>
          <th>DELETE USER RECORDS</th>
        </tr>
      </thead>
      <tbody>
        <%users.forEach(user => { %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.name%></td>
          <td><%= user.message %></td>
          <td><%= user.phone %></td>
          <td><%= user.email %></td>
          <td><a href="/update?id=<%= user.id %>">Edit</a></td>
          <td>
            <form
              action="/delete/<%= user.id %>"
              method="POST"
              style="display: inline"
            >
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
    <a href="/">Back To Home</a>
  </body>
</html>
